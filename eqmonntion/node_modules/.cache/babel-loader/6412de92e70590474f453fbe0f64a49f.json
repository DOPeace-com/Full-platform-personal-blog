{"ast":null,"code":"export default {\n  name: \"MySlid\",\n\n  data() {\n    return {\n      check: 0,\n      downX: 0,\n      moveX: 0,\n      boxWidth: 0\n    };\n  },\n\n  methods: {\n    /*\r\n    * 鼠标按下事件\r\n    * */\n    onmousedown(e) {\n      this.boxWidth = document.querySelector(\".box\").clientWidth;\n      this.downX = e.clientX;\n    },\n\n    /*\r\n    * 松开鼠标\r\n    * */\n    onmouseup(val) {\n      this.downX = 0;\n      console.log(val);\n    },\n\n    /*\r\n    * 鼠标移动事件\r\n    * */\n    onmousemove(e) {\n      if (c <= 0) {\n        this.onmouseup(true);\n        return;\n      }\n\n      var move = e.clientX - this.downX;\n      var c = this.boxWidth - 40 - move;\n\n      if (!this.downX || move <= 0) {\n        this.onmouseup(false);\n        return;\n      }\n\n      this.moveX = move;\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAYA,eAAe;EACbA,IAAI,EAAE,QADO;;EAEbC,IAAI,GAAE;IACJ,OAAM;MACJC,KAAK,EAAE,CADH;MAEJC,KAAI,EAAI,CAFJ;MAGJC,KAAI,EAAI,CAHJ;MAIJC,QAAO,EAAI;IAJP,CAAN;EAMD,CATY;;EAUbC,OAAO,EAAC;IACN;;;IAGAC,WAAW,CAACC,CAAD,EAAG;MACZ,KAAKH,QAAL,GAAgBI,QAAQ,CAACC,aAAT,CAAuB,MAAvB,EAA+BC,WAA/C;MACA,KAAKR,KAAL,GAAaK,CAAC,CAACI,OAAf;IACD,CAPK;;IAQN;;;IAGAC,SAAS,CAACC,GAAD,EAAK;MACZ,KAAKX,KAAL,GAAa,CAAb;MACAY,OAAO,CAACC,GAAR,CAAYF,GAAZ;IACD,CAdK;;IAeN;;;IAGAG,WAAW,CAACT,CAAD,EAAG;MACZ,IAAIU,CAAC,IAAE,CAAP,EAAS;QACP,KAAKL,SAAL,CAAe,IAAf;QACA;MACF;;MACA,IAAIM,IAAG,GAAIX,CAAC,CAACI,OAAF,GAAU,KAAKT,KAA1B;MACA,IAAIe,IAAI,KAAKb,QAAL,GAAc,EAAd,GAAiBc,IAAzB;;MACA,IAAI,CAAC,KAAKhB,KAAN,IAAegB,IAAI,IAAE,CAAzB,EAA2B;QACzB,KAAKN,SAAL,CAAe,KAAf;QACA;MACF;;MACA,KAAKT,KAAL,GAAae,IAAb;IACF;;EA9BM;AAVK,CAAf","names":["name","data","check","downX","moveX","boxWidth","methods","onmousedown","e","document","querySelector","clientWidth","clientX","onmouseup","val","console","log","onmousemove","c","move"],"sourceRoot":"","sources":["C:\\Users\\章和平\\Documents\\DOP\\myWeb\\eqmonntion\\src\\components\\mysliding\\MySlid.vue"],"sourcesContent":["<template>\r\n  <div